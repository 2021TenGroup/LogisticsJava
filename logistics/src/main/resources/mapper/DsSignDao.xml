<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.logistics.dao.DsSignDao">

    <resultMap id="BaseResultMap" type="com.logistics.entity.DsSign">
        <!--@Table ds_sign-->
        <result property="signId" column="sign_id" jdbcType="INTEGER"/>
        <result property="waybillId" column="waybill_id" jdbcType="INTEGER"/>
        <result property="empId" column="emp_id" jdbcType="INTEGER"/>
        <result property="signState" column="sign_state" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          sign_id, waybill_id, emp_id, sign_state
        from lms.ds_sign
        where sign_id = #{signId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          sign_id, waybill_id, emp_id, sign_state
        from lms.ds_sign
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          sign_id, waybill_id, emp_id, sign_state
        from lms.ds_sign
        <where>
            <if test="signId != null">
                and sign_id = #{signId}
            </if>
            <if test="waybillId != null">
                and waybill_id = #{waybillId}
            </if>
            <if test="empId != null">
                and emp_id = #{empId}
            </if>
            <if test="signState != null">
                and sign_state = #{signState}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="signId" useGeneratedKeys="true">
        insert into lms.ds_sign(waybill_id, emp_id, sign_state)
        values (#{waybillId}, #{empId}, #{signState})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update lms.ds_sign
        <set>
            <if test="waybillId != null">
                waybill_id = #{waybillId},
            </if>
            <if test="empId != null">
                emp_id = #{empId},
            </if>
            <if test="signState != null">
                sign_state = #{signState},
            </if>
        </set>
        where sign_id = #{signId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from lms.ds_sign where sign_id = #{signId}
    </delete>

</mapper>